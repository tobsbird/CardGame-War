<body>
    <section id="title">
        <img class="main_card_title" src="resources/king_clubs.jpg"/>
        <div id="title_section">
            <p class="home_title">War:</p>
            <p class="home_title">The Card Game</p>
        </div>
        <img class="main_card_title" src="resources/king_diamonds.jpg"/>
        <button class="title_button" onclick="location.href='/stats'">Stats</button>
    </section>
    <section id="players">
        <select class="player_button">
            <option>{{player1}}</option>
            {{#each other_players}}
            <option>{{this.name}}</option>
            {{/each}}
        </select>
        <p id="verses">VS</p>
        <select class="player_button">
            <option>{{player2}}</option>
            {{#each other_players}}
            <option>{{this.name}}</option>
            {{/each}}
        </select>
    </section>
    <section id="bottom_button">
        <button class="battle" onclick="location.href='/battle'">Battle</button>
        
    </section>
</body>